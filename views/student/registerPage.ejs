<% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card card-radius text-center">
                <div class="card-header card-header-radius bg-dark text-white">
                    <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
                </div>
                <div class="card-body">
                    <form class="form-signin" action="/student/signup" method="POST">
                        <input type="text" name="name" class="form-control" placeholder="Full Name" required>
                        <select style="margin-bottom: 30px; border-radius: 50px 50px;" class="custom-select" name="idType" id="idType" required>
                            <option value="" selected hidden>Select ID Type</option>
                            <option value="1">MyKad</option>
                            <option value="2">Passport</option>
                        </select>
                        <input type="text" name="idNumber" class="form-control" placeholder="ID Number" required onkeydown='return (event.which >= 48 && event.which <= 57) || event.which == 8 || event.which == 46'>
                        <input type="text" name="birthdate" id="birthdate" class="form-control" placeholder="Date of Birth" onkeydown="event.preventDefault()" required>
                        <input type="text" name="mobileNo" class="form-control" placeholder="Mobile Number" onkeydown='return (event.which >= 48 && event.which <= 57) || event.which == 8 || event.which == 46' required>
                        <input type="text" name="username" class="form-control" placeholder="Username" required>
                        <input type="password" name="password" class="form-control" placeholder="Password" required>
                        <input type="email" name="email" class="form-control" placeholder="Email" required>
                        <button class="btn btn-lg btn-primary btn-block btn-radius" type="submit">Sign up</button>
                    </form>
                    <p class="h5">Have an account?</p>
                    <a href="/signin">Sign In Now</a>
                </div>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>