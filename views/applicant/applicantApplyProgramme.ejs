<% include ../partials/headerNavApplicant %>

    <div class="row mt-4">
        <div class="col-12 col-md-6">
            <h4>
                <%= programme.length > 1 ? 'List of Programs' : 'Program' %>
            </h4>
            <% programme.forEach(function(program) { %>
                <div class="card mb-2">
                    <div class="card-body">
                        <p class="card-text"><small class="text-muted">Closing Date: <%= moment(programme.closingDate).format("D MMMM YYYY") %></small></p>
                        <p class="card-text">
                            <a href="/applicant/select/<%= program._id %>" class="card-link">
                                <%= program.programmeName %>
                            </a>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
        <div class="col-12 col-md-6">
            <h4>
                <%= university.length > 1 ? 'List of Universities' : 'University' %>
            </h4>
            <% university.forEach(function(univ) { %>
                <div class="card mb-2">
                    <div class="card-body">
                        <p class="card-text">
                            <a href="/applicant/university/detail/<%= univ._id %>">
                                <%= univ.universityName %>
                            </a>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <% include ../partials/footer %>