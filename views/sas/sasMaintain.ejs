
<% include ../partials/headerNavSAS %>

    <a class="btn btn-outline-secondary" href="/sas/add">Add Qualification</a>
    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered">
            <thead>
                <tr class="table-dark">
                    <th scope="col">No.</th>
                    <th scope="col">Qualification Name</th>
                    <th scope="col">Calculation of Overall Result</th>
                    <th scope="col">Grade List</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% if(qualificationList.length > 0) { let i=1; %>
                    <% qualificationList.forEach(function(qualification) { %>
                        <tr class="table-light">
                            <th class="text-center" scope="row">
                                <%= i %>
                            </th>
                            <td>
                                <%= qualification.qualificationName %>
                            </td>
                            <td>
                                <%= qualification.resultCalcDesc %>
                            </td>
                            <td>
                                <%= qualification.gradeList %>
                            </td>
                            <td class="text-center">
                                <form id="formDeleteMaintain<%= i %>" class="form-inline" action="/sas/<%= qualification._id %>?_method=DELETE" method="POST">
                                    <a href="/sas/edit/<%= qualification._id %>" class="btn btn-warning mr-3" type="submit">Edit</a>
                                    <button class="btn btn-danger" type="button" onclick="validateDeleteMaintain(<%= i %>)">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% i++; }) %>
                            <% } else { %>
                                <tr class="table-light">
                                    <td class="text-center" colspan="5">No Data Found</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>

    <% include ../partials/footer %>

