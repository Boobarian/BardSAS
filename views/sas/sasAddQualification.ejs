<form action="/sas/add" method="POST">
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Qualification Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputEmail3" name="qualificationName">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Minimum Score</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="inputPassword3" name="minimumScore">
    </div>
  </div>
  <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 col-form-label">Maximum Score</label>
