<% include ../partials/headerNavSAS %>

<a class="btn btn-outline-secondary" href="/sas/maintain">Back to Menu</a>
<h4>Input Qualification Data</h4>
<form action="/sas/edit/<%= qualification._id %>?_method=PUT" method="POST">
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Qualification Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputEmail3" name="qualificationName" value="<%= qualification.qualificationName %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Minimum Score</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="inputPassword3" name="minimumScore" value="<%= qualification.minimumScore %>">
    </div>
  </div>
  <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 col-form-label">Maximum Score</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="inputPassword3" name="maximumScore" value="<%= qualification.maximumScore %>">
      </div>
    </div>
  <div class="form-group row">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Grade List</label>
    <div class="col-sm-10">
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="gradeList"><%= qualification.gradeList %></textarea>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Result Calculation Description</label>
    <div class="col-sm-10">
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="resultCalcDesc"><%= qualification.resultCalcDesc %></textarea>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Submit Data</button>
    </div>
  </div>
  <input type="hidden" name="id" value="<%= qualification._id %>">
</form>

<% include ../partials/footer %>