<% include ../partials/headerNavSAS %>

<h4>Data University Name</h4>
<table class="table table-hover table-striped table-bordered">
    <thead>
      <tr class="table-dark">
        <th scope="col">No.</th>
        <th scope="col">University Name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if(universityList.length > 0) { let i = 1; %>
        <% universityList.forEach(function(university) { %>
          <tr class="table-light">
            <th class="text-center" scope="row"><%= i %></th>
            <td><%= university.universityName %></td>
            <td>
                <form class="form-inline" action="/sas/university/<%= university._id %>?_method=DELETE" method="POST">
                  <a href="/sas/university/admin/<%= university._id %>" class="btn btn-success mr-3" type="submit">List Admin</a>
                  <a href="/sas/university/edit/<%= university._id %>" class="btn btn-warning mr-3" type="submit">Edit</a>
                  <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </td>
          </tr>
        <% i++; }) %>
      <% } else { %>
        <tr class="table-light">
            <td class="text-center" colspan="3">No Data Found</td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <form action="/sas/university/add" method="POST">
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Enter University Name</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="inputEmail3" name="univName">
    </div>
    <div class="col-sm-2">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
  </div>
  </form>

  <% include ../partials/footer %>